{
  "name": "auth",
  "version": "1.0.0",
  "description": "Auth service for the alxmedium project",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit && eslint . --ext .ts",
    "run": "nodemon server.ts",
    "run:production": "nodemon build/server.js",
    "test": "jest --verbose --coverage",
    "test:ci": "jest --ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alxmedium/auth.git"
  },
  "author": "alxmedium",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alxmedium/auth/issues"
  },
  "homepage": "https://github.com/alxmedium/auth#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pino": "^6.2.1",
    "pino-http": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.11",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^13.13.4",
    "@types/pino": "^6.0.0",
    "@types/pino-http": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-jest": "^25.2.6",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
